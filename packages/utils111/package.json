{
  "name": "@m78/utils",
  "version": "0.0.10",
  "description": "utils for m78 projects",
  "keywords": [
    "javascript utils"
  ],
  "type": "module",
  "main": "./index.js",
  "typings": "./",
  "repository": "https://github.com/xianjie-li/m78",
  "author": {
    "name": "Link",
    "email": "1073830130@qq.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@m78/build-tools": "workspace:^",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@swc/helpers": "^0.4.11"
  },
  "files": [
    "**"
  ],
  "scripts": {
    "lint:prettier": "prettier ./src ./test --write --no-error-on-unmatched-pattern",
    "lint:script": "eslint ./src ./test --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "lint": "npm run lint:script && npm run lint:prettier",
    "test": "jest",
    "build": "m78-build-tools build",
    "pub": "pnpm build && pnpm publish --access public --registry https://registry.npmjs.org --no-git-checks"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": true
  }
}
