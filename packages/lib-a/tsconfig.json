{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "lib-a": [
        "src/index.ts"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "test/**/*"
  ]
}